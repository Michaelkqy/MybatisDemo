<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">



    <!--引用对应的dao beans-->
    <import resource="classpath*:spring/datasource.xml"/>


    <!--手工注入 resource和service中的beans-->
    <bean id="userResource" class="com.huitu.api.samples.user.UserResource">
        <property name="userService">
            <ref bean="userServiceImpl"></ref>
        </property>
    </bean>
    <bean id="userServiceImpl" class="com.huitu.api.samples.user.service.impl.UserServiceImpl">
        <property name="userDao" >
            <ref bean="userDao"></ref>
        </property>
    </bean>

    <bean id="userByRoleResource" class="com.huitu.api.samples.user.UserByRoleResource">
        <property name="userService">
            <ref bean="userServiceImpl"></ref>
        </property>
    </bean>


    <bean id="roleResource" class="com.huitu.api.samples.role.RoleResource">
        <property name="roleService">
            <ref bean="roleServiceImpl"></ref>
        </property>
    </bean>
    <bean id="roleServiceImpl" class="com.huitu.api.samples.role.service.impl.RoleServiceImpl">
        <property name="roleDao" >
            <ref bean="roleDao"></ref>
        </property>
    </bean>


</beans>